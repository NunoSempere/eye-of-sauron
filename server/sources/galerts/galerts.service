[Unit]
Description=Prospect news from galerts
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/galerts/
ExecStart=/usr/local/go/bin/go run main.go filterAndExpandSource.go saveSource.go fetchGoogleAlerts.go
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=galerts

[Install]
WantedBy=multi-user.target
