[Unit]
Description=Prospect news from gmw
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/gmw
ExecStart=/usr/local/go/bin/go run mil/fetchGmwMil.go mil/filterAndExpandSource.go mil/main.go mil/types.go mil/saveSource.go
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=gmw

[Install]
WantedBy=multi-user.target
