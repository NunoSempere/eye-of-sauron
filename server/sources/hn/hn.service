[Unit]
Description=Prospect news from HackerNews
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/hn
ExecStart=/usr/local/go/bin/go run main.go fetch.go types.go filterAndExpandSource.go saveSource.go
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=hn

[Install]
WantedBy=multi-user.target
