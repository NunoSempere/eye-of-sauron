[Unit]
Description=Prospect news from wikinews
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/wikinews
ExecStart=/usr/local/go/bin/go run main.go filterAndExpandSource.go saveSource.go fetchWikinews.go
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=wikinews

[Install]
WantedBy=multi-user.target
