[Unit]
Description=Prospect news from gdelt
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/gdelt
ExecStart=/usr/local/go/bin/go run main.go filterAndExpandSource.go saveSource.go fetchGKG.go
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=gdelt

[Install]
WantedBy=multi-user.target
