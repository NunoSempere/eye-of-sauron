[Unit]
Description=Prospect news from {{SOURCE_NAME}}
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/{{SOURCE_NAME}}
ExecStart=/usr/local/go/bin/go run main.go filterAndExpandSource.go saveSource.go fetch.go
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier={{SOURCE_NAME}}

[Install]
WantedBy=multi-user.target