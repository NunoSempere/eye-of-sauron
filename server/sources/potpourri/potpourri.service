[Unit]
Description=Prospect news from potpourri sources (CNN, etc.)
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/potpourri
ExecStart=/usr/local/go/bin/go run main.go saveSource.go 
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=potpourri

[Install]
WantedBy=multi-user.target
