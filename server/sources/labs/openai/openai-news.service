[Unit]
Description=Prospect news from OpenAI
ConditionPathExists=/home/sentinel/news/server
After=network.target

[Service]
Type=simple
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/news/server/sources/openai-news
ExecStart=/usr/local/go/bin/go run main.go saveSource.go fetch.go
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=openai-news

[Install]
WantedBy=multi-user.target